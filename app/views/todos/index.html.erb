<div class="container">

  <table class="table table-striped table-condensed">
    <tr>
      <th>Status</th> 
      <th>Task</th>
      <th>Due Date</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @todos.each do |todo| %>
      <tr>
        <td><input type="checkbox"></td>
        <td><%= todo.name %></td>
        <td><%= todo.due_date %></td>
        <td><%= link_to 'Show', todo_path(todo) %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
</table>

<%= link_to "<span class='glyphicon glyphicon-plus'></span>  New Task".html_safe, new_todo_path, class: "btn btn-primary" %>
</div>